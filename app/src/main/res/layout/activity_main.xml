<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff6cafff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Android Nanodegree"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:typeface="serif"
            android:textStyle="bold"
            android:layout_margin="5px"
            android:autoText="false" />

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Spotify Streamer"
            android:id="@+id/button1"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:layout_margin="5dp"
            android:clickable="true"
            android:onClick="showSpotifyToast" />

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Football Scores App"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Build It Bigger"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="XYZ Reader"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Capstone"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:background="#F08C35"
            android:layout_margin="5dp" />
    </LinearLayout>

</RelativeLayout>
